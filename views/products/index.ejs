<%- include('../partials/header')%>
    <%-include('../partials/navbar')%>
        <%-include('../partials/flash')%>
            
            <section class="row mt-5">


                <% for(let item of products){ %>
                    <div class="col-lg-4 mx-auto mt-5">
                        <div class="card mx-auto" style="width: 18rem;">
                            <img class="card-img-top" src="<%=item.img%>" />
                            <div class="card-body">

                                <h5 class="card-title">
                                    <%=item.name%>
                                </h5>
                                <h6>
                                    <%=item.instock%>
                                </h6>
                                <h4>
                                    <%=item.price%>
                                </h4>
                                <p class="card-text">
                                    <%=item.desc%>
                                </p>
                            </div>
                            <div class="d-flex justify-content-evenly">

                                <a href="/products/<%=item._id%>"><button class="btn btn-primary">Show</button></a>
                                <a href="/products/<%=item._id%>/edit"><button class="btn btn-primary">Edit</button></a>
                                <form action="/products/<%=item._id%>/remove?_method=DELETE" method="POST">
                                    <button class="btn btn-primary">Delete</button>
                                </form>
                            </div>

                        </div>
                    </div>
                    <% } %>

            </section>
            <%- include('../partials/footer')%>