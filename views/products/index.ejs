<%- include('../partials/header')%> 

<h1>Displaying all the products</h1>
<h2> <a href="/product/new">Create a new Product</a> </h2>
<section>

    
    <% for(let item of products){   %> 
        <div>
            <h1><%=item.name%></h1>
            <img src="<%=item.img%>" />
            <h2><%=item.price%></h2>
            <h4><%=item.instock%></h4>
            <p><%=item.desc%></p>
            <a href="/products/<%=item._id%>"><button>Show</button></a>
            <a href="/products/<%=item._id%>/edit"><button>Edit</button></a>
            <form action="/products/<%=item._id%>/remove?_method=DELETE" method="POST">
            <button>Delete</button>
            </form>

        </div>
        <% } %> 
        
    </section>
<%- include('../partials/footer')%> 
