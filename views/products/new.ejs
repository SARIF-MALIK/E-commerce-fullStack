<%- include('../partials/header')%> 
    <h1>Form to add a new product</h1>

    <form class="needs-validation" action="/products" method="POST" novalidate>
        <div>
            <label for="naam" class="form-label">Name:</label>
            <input type="text" class="form-control" name="name" id="naam" required >
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter name.
            </div>
        </div>
        <div>
            <label for="Image" class="form-label">Image:</label>
            <input type="text" class="form-control" name="img" id="Image" required>
            <div class="invalid-feedback">
                Please provide a valid url.
              </div>
        </div>
        <div>
            <label for="price" class="form-label">Price:</label>
            <input type="text" class="form-control" name="price" id="price" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter price.
            </div>
        </div>
        <div>
            <label for="stock" class="form-label">Stock:</label>
            <input type="text"  class="form-control" name="instock" id="stock" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter Stock availability.
            </div>
        </div>
        <div>
            <label for="des" class="form-label">Description:</label>
            <textarea name="desc" id="des" rows="3"></textarea>
        </div>

        <button type="submit">Add Product</button>
    </form>
    <script src="/js/script.js"></script>
   <%- include('../partials/footer')%> 